@model IEnumerable<BarberShopManagementSystem.Models.Appointment>

@{
    ViewData["Title"] = "Appointments Index";
}

<h2 class="text-center mb-4">Your Appointments</h2>

<p class="text-center mb-4">
    <a asp-action="Create" class="btn btn-primary btn-lg">Create New Appointment</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Salon)</th>
                <th>@Html.DisplayNameFor(model => model.Employee)</th>
                <th>@Html.DisplayNameFor(model => model.Service)</th>
                <th>@Html.DisplayNameFor(model => model.RandevuZamani)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Duration)</th>
                <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                <th>@Html.DisplayNameFor(model => model.CustomerPhone)</th>
                <th>@Html.DisplayNameFor(model => model.IsConfirmed)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Salon.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Employee.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Service.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.RandevuZamani)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CustomerPhone)</td>
                    <td>
                        @if (item.IsConfirmed)
                        {
                            <span class="badge bg-success">Confirmed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Pending</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Cancel</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
