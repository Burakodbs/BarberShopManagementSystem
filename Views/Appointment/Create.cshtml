@model BarberShopManagementSystem.Models.Appointment



<h2>Create Appointment</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="SalonId" class="control-label">Salon</label>
        <select asp-for="SalonId" class="form-control" asp-items="@(ViewData["SalonId"] as SelectList)"></select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label">Employee</label>
        <select asp-for="EmployeeId" class="form-control" asp-items="@(ViewData["EmployeeId"] as SelectList)"></select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ServiceId" class="control-label">Service</label>
        <select asp-for="ServiceId" class="form-control" asp-items="@(ViewData["ServiceId"] as SelectList)"></select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label">Appointment Time</label>
        <select asp-for="StartTime" class="form-control" asp-items="@(ViewData["TimeSlots"] as List<SelectListItem>)"></select>
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="text-danger">@error.ErrorMessage</div>
}


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
