@model IEnumerable<BarberShopManagementSystem.Models.Appointment>

@{
    ViewData["Title"] = "Admin Panel";
}

<h2>Admin Panel - Pending Appointments</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Phone</th>
            <th>Salon</th>
            <th>Service</th>
            <th>Employee</th>
            <th>Date & Time</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center">No pending appointments.</td>
            </tr>
        }
        else
        {
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.CustomerName</td>
                    <td>@appointment.CustomerPhone</td>
                    <td>@appointment.Salon?.Address</td>
                    <td>@appointment.Service?.Name</td>
                    <td>@appointment.Employee?.Name</td>
                    <td>@appointment.RandevuZamani.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <form asp-action="ConfirmAppointment" asp-controller="Admin" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@appointment.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Confirm</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
