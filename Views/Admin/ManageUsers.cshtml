@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Kayıtlı Kullanıcılar";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Kayıtlı Kullanıcılar</h1>
    <p class="text-center">
        <a asp-action="AddUser" class="btn btn-success">Yeni Kullanıcı Ekle</a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Email</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>
                            <div class="d-flex justify-content-start">
                                <!-- Silme Butonu -->
                                <form asp-action="DeleteUser" asp-controller="Admin" method="post" class="me-2">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-danger" title="Kullanıcıyı sil">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </form>
                                <!-- Düzenleme Butonu (Opsiyonel) -->
                                <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="btn btn-warning" title="Kullanıcıyı düzenle">
                                    <i class="bi bi-pencil-fill"></i> Düzenle
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted">Hiç kullanıcı bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
