@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Admin Paneli</h1>
    <p class="text-muted text-center">Sistemi yönetmek için aşağıdaki seçeneklerden birini seçin.</p>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <!-- Kullanıcı Yönetimi -->
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-lines-fill display-4 text-primary"></i>
                    <h5 class="card-title mt-3">Kullanıcı Yönetimi</h5>
                    <p class="card-text text-muted">Sistemdeki kullanıcıları görüntüleyebilir, düzenleyebilir veya silebilirsiniz.</p>
                    <a href="/Admin/ManageUsers" class="btn btn-primary">Yönet</a>
                </div>
            </div>
        </div>

        <!-- Salon Yönetimi -->
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-house-door-fill display-4 text-success"></i>
                    <h5 class="card-title mt-3">Salon Yönetimi</h5>
                    <p class="card-text text-muted">Salon bilgilerini yönetebilir, yeni salonlar ekleyebilirsiniz.</p>
                    <a href="/Salon" class="btn btn-success">Yönet</a>
                </div>
            </div>
        </div>

        <!-- Çalışan Yönetimi -->
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-fill display-4 text-warning"></i>
                    <h5 class="card-title mt-3">Çalışan Yönetimi</h5>
                    <p class="card-text text-muted">Çalışan listelerini düzenleyebilir ve yeni çalışanlar ekleyebilirsiniz.</p>
                    <a href="/Employee" class="btn btn-warning">Yönet</a>
                </div>
            </div>
        </div>

        <!-- Randevu Yönetimi -->
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-event display-4 text-info"></i>
                    <h5 class="card-title mt-3">Randevu Yönetimi</h5>
                    <p class="card-text text-muted">Randevuları kontrol edin, düzenleyin veya yeni randevular oluşturun.</p>
                    <a href="/Appointment/AllAppointments" class="btn btn-info">Yönet</a>
                </div>
            </div>
        </div>

        <!-- Servis Yönetimi -->
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-gear-fill display-4 text-danger"></i>
                    <h5 class="card-title mt-3">Servis Yönetimi</h5>
                    <p class="card-text text-muted">Servisleri kontrol edin, düzenleyin veya yeni servisler oluşturun.</p>
                    <a href="/Service" class="btn btn-danger">Yönet</a>
                </div>
            </div>
        </div>
    </div>
</div>
