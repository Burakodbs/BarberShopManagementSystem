@model BarberShopManagementSystem.Models.Salon

@{
    ViewData["Title"] = "Salon Sil";
}

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">Salon Sil</h2>
    <h4 class="text-center text-warning">Bu salonu silmek istediğinizden emin misiniz?</h4>

    <div class="card mt-4">
        <div class="card-header bg-warning text-dark fw-bold">Salon Bilgileri</div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Adı:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Adres:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3">Telefon Numarası:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-3">Açılış Saati:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OpeningTime)</dd>

                <dt class="col-sm-3">Kapanış Saati:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ClosingTime)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
        </div>
    </form>
</div>
