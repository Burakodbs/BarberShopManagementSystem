@model BarberShopManagementSystem.Models.Salon

@{
    ViewData["Title"] = "Salon Detayları";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Salon Detayları</h2>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white fw-bold">Salon Bilgileri</div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Adı:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Adres:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3">Telefon Numarası:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-3">Açılış Saati:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OpeningTime)</dd>

                <dt class="col-sm-3">Kapanış Saati:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ClosingTime)</dd>
            </dl>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-success text-white fw-bold">Sunulan Hizmetler</div>
        <div class="card-body">
            @if (Model.Services != null && Model.Services.Any())
            {
                <ul class="list-group">
                    @foreach (var service in Model.Services)
                    {
                        <li class="list-group-item">
                            <strong>@service.Name</strong> - @service.Price.ToString("C")
                            (<span class="text-muted">@service.Duration dakika</span>)
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">Bu salona ait herhangi bir hizmet bulunmamaktadır.</p>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-warning text-dark fw-bold">Atanmış Çalışanlar</div>
        <div class="card-body">
            @if (Model.Employees != null && Model.Employees.Any())
            {
                <ul class="list-group">
                    @foreach (var employee in Model.Employees)
                    {
                        <li class="list-group-item">@employee.Name @employee.Surname</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">Bu salona atanmış çalışan bulunmamaktadır.</p>
            }
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>
