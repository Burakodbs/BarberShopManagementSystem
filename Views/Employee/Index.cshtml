@model IEnumerable<BarberShopManagementSystem.Models.Employee>

<h1>Çalışan Listesi</h1>

<a href="/Employee/Create" class="btn btn-primary">Yeni Çalışan Ekle</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Uzmanlık Alanı</th>
            <th>Çalışma Saatleri</th>
            <th>Müsaitlik</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Specialty</td>
                <td>@employee.StartTime - @employee.EndTime</td>
                <td>@(employee.IsAvailable ? "Evet" : "Hayır")</td>
                <td>
                    <a href="/Employee/Edit/@employee.Id" class="btn btn-warning">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@employee.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
