@model IEnumerable<BarberShopManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2 class="text-center text-primary">Employee List</h2>

<div class="d-flex justify-content-center mb-3">
    <a asp-action="Create" class="btn btn-success">Create New</a>
</div>

<table class="table table-striped table-bordered shadow">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Surname)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Salon)</th>
            <th>@Html.DisplayNameFor(model => model.ExpertService)</th>
            <th>@Html.DisplayNameFor(model => model.WorkDays)</th>
            <th>@Html.DisplayNameFor(model => model.IsOnVacation)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Salon.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ExpertService.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.WorkDays)</td>
                <td>@Html.DisplayFor(modelItem => item.IsOnVacation)</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center mt-4">
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">Panel'e Geri Dön</a>
</div>
