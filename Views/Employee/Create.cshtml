@model BarberShopManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}

<h2 class="text-center mb-4">Create New Employee</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">First Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Surname" class="form-label">Last Name</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SalonId" class="form-label">Salon</label>
                <select asp-for="SalonId" class="form-select">
                    <option value="">Select a Salon</option>
                    @foreach (var salon in ViewBag.Salons)
                    {
                        <option value="@salon.Value">@salon.Text</option>
                    }
                </select>
                <span asp-validation-for="SalonId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="ExpertiseId" class="form-label">Expertise Area</label>
                <select id="ExpertiseId" name="ExpertiseId" class="form-select" asp-items="ViewBag.Services">
                    <option value="">Select a Service</option>
                </select>
                <span asp-validation-for="ExpertiseId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Working Days</label>
                <div class="row">
                    @foreach (var day in ViewBag.WorkDays)
                    {
                        <div class="col-md-4">
                            <div class="form-check">
                                <input type="checkbox"
                                       name="selectedWorkDays"
                                       value="@day"
                                       class="form-check-input"
                                       id="@day" />
                                <label class="form-check-label" for="@day">@day</label>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
